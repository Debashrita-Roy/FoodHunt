<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
tools:context=".FoodHuntGold"
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ImageView
    android:layout_height="574dp"
    android:layout_width="374dp"
    app:srcCompat="@drawable/offers1"
    app:layout_constraintVertical_bias="0.512"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/imageView15"/>
<ImageView
    android:layout_height="237dp"
    android:layout_width="289dp"
    app:srcCompat="@drawable/gold2"
    android:id="@+id/imageView20"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteY="-10dp"
    tools:layout_editor_absoluteX="-52dp"/>
<TextView
    android:layout_height="68dp"
    android:layout_width="250dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/textView"
    android:textSize="48sp"
    android:textColor="#FFFFFF"
    android:text="FoodHunt"
    android:fontFamily="monospace"
    android:layout_marginTop="28dp"/>
<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/textView3"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="25dp"
    android:textSize="20sp"
    android:textColor="#FFFFFF"
    android:text="_____________________________"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@+id/textView"/>
<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/textView5"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="43dp"
    android:textSize="16sp"
    android:textColor="#FFFFFF"
    android:text="As Gold as Dessert"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/textView3"/>
<Button
    android:layout_height="54dp"
    android:layout_width="104dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/claimB"
    android:text="Claim"
    android:layout_marginTop="288dp"
    app:layout_constraintTop_toBottomOf="@+id/textView5"
    app:layout_constraintHorizontal_bias="0.074"
    app:cornerRadius="40dp"
    android:shadowColor="#E4DDDD"
    android:onClick="claimClick"
    android:backgroundTintMode="multiply"/>
</androidx.constraintlayout.widget.ConstraintLayout>

