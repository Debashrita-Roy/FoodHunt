<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="409dp"
        android:layout_height="594dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="139dp"
        android:layout_height="221dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="We saved you a seat!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signinB"
        android:layout_width="279dp"
        android:layout_height="54dp"
        android:layout_marginTop="392dp"
        android:backgroundTintMode="multiply"
        android:onClick="onClick"
        android:text="Sign In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registeruserB"
        android:layout_width="137dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="multiply"
        android:onClick="onClick"
        android:shadowColor="#050505"
        android:text=" Register as user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinB" />

    <Button
        android:id="@+id/registerAdminB"
        android:layout_width="132dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="multiply"
        android:onClick="onClick"
        android:shadowColor="#050505"
        android:text=" Register as Admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toEndOf="@+id/registeruserB"
        app:layout_constraintTop_toBottomOf="@+id/signinB" />
</androidx.constraintlayout.widget.ConstraintLayout>